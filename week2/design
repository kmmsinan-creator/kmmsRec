    <script>
        // Sample movie data with images
        const movies = [
            {
                id: 1,
                title: "The Shawshank Redemption",
                genres: ["Drama"],
                poster: "https://m.media-amazon.com/images/M/MV5BNDE3ODcxYzMtY2YzZC00NmNlLWJiNDMtZDViZWM2MzIxZDYwXkEyXkFqcGdeQXVyNjAwNDUxODI@._V1_FMjpg_UX1000_.jpg"
            },
            {
                id: 2,
                title: "The Godfather",
                genres: ["Crime", "Drama"],
                poster: "https://m.media-amazon.com/images/M/MV5BM2MyNjYxNmUtYTAwNi00MTYxLWJmNWYtYzZlODY3ZTk3OTFlXkEyXkFqcGdeQXVyNzkwMjQ5NzM@._V1_FMjpg_UX1000_.jpg"
            },
            {
                id: 3,
                title: "The Dark Knight",
                genres: ["Action", "Crime", "Drama"],
                poster: "https://m.media-amazon.com/images/M/MV5BMTMxNTMwODM0NF5BMl5BanBnXkFtZTcwODAyMTk2Mw@@._V1_FMjpg_UX1000_.jpg"
            },
            {
                id: 4,
                title: "Pulp Fiction",
                genres: ["Crime", "Drama"],
                poster: "https://m.media-amazon.com/images/M/MV5BNGNhMDIzZTUtNTBlZi00MTRlLWFjM2ItYzJjNDymxYzM5M2Y1XkEyXkFqcGdeQXVyNzkwMjQ5NzM@._V1_FMjpg_UX1000_.jpg"
            },
            {
                id: 5,
                title: "Forrest Gump",
                genres: ["Drama", "Romance"],
                poster: "https://m.media-amazon.com/images/M/MV5BNWIwODRlZTUtY2U3ZS00Yzg1LWJhNzYtMmZiYmEyNmU1NjMzXkEyXkFqcGdeQXVyMTQxNzMzNDI@._V1_FMjpg_UX1000_.jpg"
            },
            {
                id: 6,
                title: "Inception",
                genres: ["Action", "Adventure", "Sci-Fi"],
                poster: "https://m.media-amazon.com/images/M/MV5BMjAxMzY3NjcxNF5BMl5BanBnXkFtZTcwNTI5OTM0Mw@@._V1_FMjpg_UX1000_.jpg"
            },
            {
                id: 7,
                title: "The Matrix",
                genres: ["Action", "Sci-Fi"],
                poster: "https://m.media-amazon.com/images/M/MV5BNzQzOTk3OTAtNDQ0Zi00ZTVkLWI0MTEtMDllZjNkYzNjNTc4L2ltYWdlXkEyXkFqcGdeQXVyNjU0OTQ0OTY@._V1_FMjpg_UX1000_.jpg"
            },
            {
                id: 8,
                title: "Goodfellas",
                genres: ["Biography", "Crime", "Drama"],
                poster: "https://m.media-amazon.com/images/M/MV5BY2NkZjEzMDgtN2RjYy00YzM1LWI4ZmQtMjIwYjFjNmI3ZGEwXkEyXkFqcGdeQXVyNzkwMjQ5NzM@._V1_FMjpg_UX1000_.jpg"
            }
        ];

        // DOM elements
        const movieSelect = document.getElementById('movie-select');
        const recommendBtn = document.getElementById('recommend-btn');
        const resultBox = document.getElementById('result-box');

        // Event listeners
        recommendBtn.addEventListener('click', getRecommendations);

        // Function to get recommendations
        function getRecommendations() {
            const selectedMovieId = parseInt(movieSelect.value);
            
            if (!selectedMovieId) {
                resultBox.innerHTML = '<p class="status-message">Please select a movie first</p>';
                return;
            }
            
            // Find the selected movie
            const selectedMovie = movies.find(movie => movie.id === selectedMovieId);
            
            if (!selectedMovie) {
                resultBox.innerHTML = '<p class="status-message">Movie not found. Please try another selection.</p>';
                return;
            }
            
            // Display loading message
            resultBox.innerHTML = '<p class="status-message">Finding recommendations for <span class="highlight">' + selectedMovie.title + '</span>...</p>';
            
            // Simulate loading delay
            setTimeout(() => {
                // Calculate recommendations (in a real app, this would use Jaccard similarity)
                const recommendations = getSimilarMovies(selectedMovie);
                
                // Display results
                displayResults(selectedMovie, recommendations);
            }, 1000);
        }
        
        // Function to find similar movies (simplified for demo)
        function getSimilarMovies(selectedMovie) {
            // In a real application, this would use Jaccard similarity on genres
            // For this demo, we'll just return some hardcoded recommendations
            const recommendationMap = {
                1: [5, 2, 8],   // Shawshank -> Forrest Gump, Godfather, Goodfellas
                2: [8, 4, 1],   // Godfather -> Goodfellas, Pulp Fiction, Shawshank
                3: [6, 7, 4],   // Dark Knight -> Inception, Matrix, Pulp Fiction
                4: [2, 8, 3],   // Pulp Fiction -> Godfather, Goodfellas, Dark Knight
                5: [1, 4, 6]    // Forrest Gump -> Shawshank, Pulp Fiction, Inception
            };
            
            const recommendedIds = recommendationMap[selectedMovie.id] || [6, 7, 8];
            return movies.filter(movie => recommendedIds.includes(movie.id));
        }
        
        // Function to display results
        function displayResults(selectedMovie, recommendations) {
            let html = `
                <div class="selected-movie-section">
                    <p class="status-message">Because you liked <span class="highlight">${selectedMovie.title}</span>, we recommend:</p>
                    <div class="movies-container">
            `;
            
            // Add recommended movies
            recommendations.forEach(movie => {
                html += `
                    <div class="movie-card recommended-movie">
                        <img src="${movie.poster}" alt="${movie.title}" class="movie-poster">
                        <div class="movie-info">
                            <div class="movie-title">${movie.title}</div>
                            <div class="movie-genres">${movie.genres.join(", ")}</div>
                        </div>
                    </div>
                `;
            });
            
            html += `
                    </div>
                </div>
            `;
            
            resultBox.innerHTML = html;
        }
        
        // Initialize the app
        function init() {
            // Populate the dropdown with movies
            movies.forEach(movie => {
                const option = document.createElement('option');
                option.value = movie.id;
                option.textContent = movie.title;
                movieSelect.appendChild(option);
            });
        }
        
        // Run initialization when page loads
        window.onload = init;
    </script>
</body>
</html>
